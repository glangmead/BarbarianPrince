<Window x:Class="BarbarianPrince.ShowCounterHelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarbarianPrince"
        mc:Ignorable="d"
        Title="Character Description" Height="400" Width="700" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" SizeToContent="Height" WindowStyle="ToolWindow">
   <Grid x:Name="myGrid">
      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="3*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock x:Name="myTextBlock" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16">
         Each character in the game has a combat skill, an endurance value, and a wealth code <InlineUIContainer><Button Content='r225' FontFamily='Courier New' FontSize='12' Click="ButtonRule_Click"></Button></InlineUIContainer>.
      </TextBlock>
      <StackPanel Name="myStackpanelLeft" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
         <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="70" Height="30" Margin="0,0,0,50" FontSize="14" Click="ButtonRule_Click">r201</Button>
         <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="70" Height="30" Margin="0,0,0,0" FontSize="14" Click="ButtonRule_Click">r221</Button>
      </StackPanel>
      <StackPanel Name="myStackpanelRight" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
         <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="70" Height="30" Margin="0,0,0,50" FontSize="14" Click="ButtonRule_Click">r220</Button>
         <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="70" Height="30" Margin="0,0,0,0" FontSize="14" Click="ButtonRule_Click">r216</Button>
      </StackPanel>
   </Grid>
</Window>
